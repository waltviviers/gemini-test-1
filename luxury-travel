  ];

  const [filter, setFilter] = useState('All');
  const categories = ['All', ...new Set(destinations.map(d => d.category))];
  const filteredDestinations = filter === 'All' ? destinations : destinations.filter(d => d.category === filter);

  return (
    <div className={`animate-fadeIn py-12 md:py-16 ${sectionBgDark}`}> {/* Use body's dark bg for pages */}
      <div className="container mx-auto px-4 sm:px-6 lg:px-8">
        <h1 className={`text-4xl md:text-5xl font-bold text-center mb-4 ${primaryTextLight} ${primaryTextDark}`}>Luxury African Destinations</h1>
