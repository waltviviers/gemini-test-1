import React, { useState, useEffect } from 'react';
import { MapPin, Search, Calendar, Users, Star, ChevronLeft, ChevronRight, Phone, Mail, Globe, Sun, Moon, Menu, X, ShieldCheck,Leaf, Compass } from 'lucide-react';

// Placeholder for Firebase (if needed later for dynamic content)
// import { initializeApp } from 'firebase/app';
// import { getFirestore, collection, getDocs } from 'firebase/firestore';

// const firebaseConfig = { /* Your Firebase Config */ };
// const app = initializeApp(firebaseConfig);
// const db = getFirestore(app);

const App = () => {
  const [currentPage, setCurrentPage] = useState('home');
  const [isMobileMenuOpen, setIsMobileMenuOpen] = useState(false);
  const [darkMode, setDarkMode] = useState(false);

  const navigateTo = (page) => {
    setCurrentPage(page);
    setIsMobileMenuOpen(false); // Close mobile menu on navigation
    window.scrollTo(0, 0); // Scroll to top of page
  };

  useEffect(() => {
    if (darkMode) {
      document.documentElement.classList.add('dark');
    } else {
      document.documentElement.classList.remove('dark');
    }
  }, [darkMode]);

  const toggleDarkMode = () => {
    setDarkMode(!darkMode);
  };

  const navLinks = [
    { name: 'Home', page: 'home' },
    { name: 'Destinations', page: 'destinations' },
    { name: 'Experiences', page: 'experiences' },
    { name: 'Our Approach', page: 'about' },
    { name: 'Contact', page: 'contact' },
  ];

  const renderPage = () => {
    switch (currentPage) {
      case 'home':
        return <HomePage navigateTo={navigateTo} />;
      case 'destinations':
        return <DestinationsPage navigateTo={navigateTo} />;
      case 'experiences':
        return <ExperiencesPage navigateTo={navigateTo} />;
      case 'about':
        return <AboutUsPage />; 
      case 'contact':
        return <ContactPage />;
      default:
        return <HomePage navigateTo={navigateTo} />;
    }
  };

  // Main background and text colors
  const bodyClasses = darkMode 
    ? 'bg-stone-900 text-stone-200' 
    : 'bg-yellow-50 text-stone-800'; // Light creamy-brown bg, dark warm-gray text

  // Header background colors
  const headerBgClasses = darkMode 
    ? 'bg-stone-800' 
    : 'bg-white'; // White header in light mode for contrast

  // Footer background colors
  const footerBgClasses = darkMode
    ? 'bg-stone-800 border-t border-stone-700'
    : 'bg-yellow-100 border-t border-yellow-200';


  return (
    <div className={`min-h-screen font-serif ${bodyClasses} transition-colors duration-300`}>
      {/* Header */}
      <header className={`sticky top-0 z-50 shadow-lg ${headerBgClasses}`}>
        <div className="container mx-auto px-4 sm:px-6 lg:px-8">
          <div className="flex items-center justify-between h-20">
            {/* Logo */}
            <div className="flex-shrink-0">
              <a href="#" onClick={() => navigateTo('home')} className="text-3xl font-bold text-orange-700 dark:text-orange-500">
                Afriluxe Journeys
              </a>
            </div>

            {/* Desktop Navigation */}
            <nav className="hidden md:flex space-x-8">
              {navLinks.map((link) => (
                <a
                  key={link.page}
                  href="#"
                  onClick={() => navigateTo(link.page)}
                  className={`text-lg font-medium ${currentPage === link.page 
                    ? 'text-orange-600 dark:text-orange-400 border-b-2 border-orange-600' 
                    : 'text-stone-600 dark:text-stone-300 hover:text-orange-500 dark:hover:text-orange-400'} transition-colors duration-200`}
                >
                  {link.name}
                </a>
              ))}
            </nav>
            
            <div className="flex items-center">
              <button
                onClick={toggleDarkMode}
                className={`p-2 rounded-full hover:bg-yellow-100 dark:hover:bg-stone-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 mr-2`}
                aria-label="Toggle dark mode"
              >
                {darkMode ? <Sun size={24} className="text-yellow-400" /> : <Moon size={24} className="text-stone-700" />}
              </button>
              <div className="md:hidden">
                <button
                  onClick={() => setIsMobileMenuOpen(!isMobileMenuOpen)}
                  className="text-stone-600 dark:text-stone-300 hover:text-orange-500 dark:hover:text-orange-400 focus:outline-none"
                  aria-label="Open menu"
                >
                  {isMobileMenuOpen ? <X size={28} /> : <Menu size={28} />}
                </button>
              </div>
            </div>
          </div>
        </div>

        {/* Mobile Navigation Menu */}
        {isMobileMenuOpen && (
          <div className={`md:hidden absolute top-20 left-0 right-0 shadow-xl pb-4 ${darkMode ? 'bg-stone-800' : 'bg-white'}`}>
            <nav className="flex flex-col space-y-4 px-6 pt-4">
              {navLinks.map((link) => (
                <a
                  key={link.page}
                  href="#"
                  onClick={() => navigateTo(link.page)}
                  className={`block py-2 text-lg font-medium rounded-md text-center ${currentPage === link.page 
                    ? 'bg-orange-600 text-white' 
                    : 'text-stone-600 dark:text-stone-300 hover:bg-yellow-100 dark:hover:bg-stone-700 hover:text-orange-500'} transition-colors duration-200`}
                >
                  {link.name}
                </a>
              ))}
            </nav>
          </div>
        )}
      </header>

      <main>{renderPage()}</main>

      <footer className={`py-12 ${footerBgClasses}`}>
        <div className="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <div className="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
            <div>
              <h3 className="text-xl font-semibold mb-4 text-orange-600 dark:text-orange-500">Afriluxe Journeys</h3>
              <p className="text-stone-600 dark:text-stone-400">Curating extraordinary luxury adventures across Africa for discerning US & European travellers.</p>
            </div>
            <div>
              <h3 className="text-xl font-semibold mb-4 text-orange-600 dark:text-orange-500">Explore</h3>
              <ul className="space-y-2">
                {navLinks.map(link => (
                   <li key={`footer-${link.page}`}>
                     <a href="#" onClick={() => navigateTo(link.page)} className="text-stone-600 dark:text-stone-400 hover:text-orange-500 dark:hover:text-orange-400">
                       {link.name}
                     </a>
                   </li>
                ))}
              </ul>
            </div>
            <div>
              <h3 className="text-xl font-semibold mb-4 text-orange-600 dark:text-orange-500">Connect With Our Experts</h3>
              <div className="flex justify-center space-x-4">
                <a href="mailto:concierge@afriluxejourneys.com" className="text-stone-600 dark:text-stone-400 hover:text-orange-500 dark:hover:text-orange-400" aria-label="Email Afriluxe Journeys"><Mail size={24} /></a>
                <a href="tel:+1800AFRILUXE" className="text-stone-600 dark:text-stone-400 hover:text-orange-500 dark:hover:text-orange-400" aria-label="Call Afriluxe Journeys"><Phone size={24} /></a>
              </div>
            </div>
          </div>
          <p className="text-stone-500 dark:text-stone-400 text-sm">&copy; {new Date().getFullYear()} Afriluxe Journeys. All rights reserved. Tailored African Luxury for USA & Europe.</p>
        </div>
      </footer>
    </div>
  );
};

// --- Page Components ---
// Section background colors
const sectionBgLight = 'bg-yellow-100'; // Slightly darker than body bg-yellow-50
const sectionBgDark = 'dark:bg-stone-800'; // Slightly lighter than body dark:bg-stone-900

// Card background colors
const cardBgLight = 'bg-white'; // White cards for contrast on light mode
const cardBgDark = 'dark:bg-stone-700'; // Darker cards on dark mode

// Text colors for sections/cards
const primaryTextLight = 'text-stone-800';
const secondaryTextLight = 'text-stone-600';
const primaryTextDark = 'dark:text-stone-100';
const secondaryTextDark = 'dark:text-stone-300';
const tertiaryTextDark = 'dark:text-stone-400';


