              <div className="relative">
                <img src={dest.image} alt={dest.name} className="w-full h-72 object-cover" onError={(e) => e.target.src='https://placehold.co/600x400/964B00/FFFFFF?text=African+Scene'}/>
                <div className="absolute top-4 right-4 bg-orange-600 text-white text-sm px-3 py-1 rounded-full shadow"> {dest.priceRange} </div>
              </div>
              <div className="p-6 flex flex-col flex-grow">
                <h3 className={`text-2xl font-semibold mb-2 ${primaryTextLight} ${primaryTextDark}`}>{dest.name}</h3>
                <p className={`text-sm flex-grow mb-4 ${secondaryTextLight} ${tertiaryTextDark}`}>{dest.description}</p>
                <div className="mb-4">
                    <h4 className={`font-semibold text-sm mb-1 ${primaryTextLight} ${secondaryTextDark}`}>Key Highlights:</h4>
                    <ul className={`list-disc list-inside text-xs space-y-1 ${secondaryTextLight} ${tertiaryTextDark}`}>
                        {dest.highlights.slice(0,3).map(hl => <li key={hl}>{hl}</li>)}
                        {dest.highlights.length > 3 && <li>And many more...</li>}
                    </ul>
                </div>
                <button onClick={() => alert(`Enquire about luxury travel to ${dest.name}.`)} className="mt-auto w-full bg-orange-600 hover:bg-orange-700 text-white font-semibold py-3 px-6 rounded-lg shadow-md transition-colors duration-300 group-hover:bg-orange-700"> Plan This Journey </button>
              </div>
            </div>
          ))}
        </div>
        {filteredDestinations.length === 0 && <p className={`text-center text-xl col-span-full mt-10 ${secondaryTextLight} ${tertiaryTextDark}`}> No destinations currently match your filter. </p>}
      </div>
    </div>
  );
};

