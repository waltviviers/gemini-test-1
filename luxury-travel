const ContactPage = () => {
  const [formData, setFormData] = useState({ name: '', email: '', phone: '', destinationInterest: '', message: '' });
  const [isSubmitted, setIsSubmitted] = useState(false);
  const [submitError, setSubmitError] = useState('');

  const handleChange = (e) => setFormData({ ...formData, [e.target.name]: e.target.value });

  const handleSubmit = async (e) => {
    e.preventDefault();
    setSubmitError(''); 
    if (!formData.name || !formData.email || !formData.message) { setSubmitError('Please fill in Name, Email, and Message.'); return; }
    if (!/\S+@\S+\.\S+/.test(formData.email)) { setSubmitError('Please enter a valid email address.'); return; }
    console.log('African Luxury Travel Inquiry:', formData);
    await new Promise(resolve => setTimeout(resolve, 1000)); 
    setIsSubmitted(true);
    setFormData({ name: '', email: '', phone: '', destinationInterest: '', message: '' }); 
  };

  if (isSubmitted) {
    return (
      <div className={`animate-fadeIn py-16 md:py-24 ${sectionBgDark} flex items-center justify-center`} style={{minHeight: 'calc(100vh - 13rem)'}}>
        <div className={`container mx-auto px-4 sm:px-6 lg:px-8 text-center ${cardBgLight} ${cardBgDark} p-10 rounded-xl shadow-2xl max-w-lg`}>
          <Mail size={64} className="text-green-500 mx-auto mb-6" /> {/* Success icon */}
          <h2 className={`text-3xl font-semibold mb-4 ${primaryTextLight} ${primaryTextDark}`}>Thank You for Your Inquiry!</h2>
          <p className={`text-lg ${secondaryTextLight} ${tertiaryTextDark} mb-6`}> An Afriluxe Journeys specialist will be in touch shortly... </p>
          <button onClick={() => setIsSubmitted(false)} className="bg-orange-600 hover:bg-orange-700 text-white font-bold py-3 px-8 rounded-lg text-lg shadow-md transition-colors duration-300"> Make Another Inquiry </button>
        </div>
      </div>
    );
  }

  return (
    <div className={`animate-fadeIn py-12 md:py-16 ${sectionBgDark}`}>
      <div className="container mx-auto px-4 sm:px-6 lg:px-8">
        <h1 className={`text-4xl md:text-5xl font-bold text-center mb-4 ${primaryTextLight} ${primaryTextDark}`}>Consult Our Africa Travel Specialists</h1>
        <p className={`text-lg ${secondaryTextLight} ${tertiaryTextDark} text-center mb-12 max-w-2xl mx-auto`}> Ready to explore the wonders of Africa in unparalleled luxury?... </p>
        <div className="grid lg:grid-cols-2 gap-12 items-start">
          <div className={`${cardBgLight} ${cardBgDark} p-8 md:p-10 rounded-xl shadow-2xl`}>
            <h2 className={`text-2xl font-semibold mb-6 ${primaryTextLight} ${primaryTextDark}`}>Start Your Journey</h2>
            {submitError && <p className="mb-4 text-sm text-red-600 dark:text-red-400 bg-red-100 dark:bg-red-900 p-3 rounded-md">{submitError}</p>}
            <form onSubmit={handleSubmit} className="space-y-6">
              <div>
                <label htmlFor="name" className={`block text-sm font-medium ${secondaryTextLight} ${secondaryTextDark} mb-1`}>Full Name <span className="text-red-500">*</span></label>
                <input type="text" name="name" id="name" value={formData.name} onChange={handleChange} required className={`w-full px-4 py-3 rounded-lg border-yellow-300 dark:border-stone-600 focus:ring-orange-500 focus:border-orange-500 dark:bg-stone-700 ${primaryTextDark} shadow-sm text-sm`} placeholder="e.g., Jane Smith (USA)" />
              </div>
              <div>
                <label htmlFor="email" className={`block text-sm font-medium ${secondaryTextLight} ${secondaryTextDark} mb-1`}>Email Address <span className="text-red-500">*</span></label>
                <input type="email" name="email" id="email" value={formData.email} onChange={handleChange} required className={`w-full px-4 py-3 rounded-lg border-yellow-300 dark:border-stone-600 focus:ring-orange-500 focus:border-orange-500 dark:bg-stone-700 ${primaryTextDark} shadow-sm text-sm`} placeholder="e.g., j.smith@example.com" />
              </div>
              <div>
                <label htmlFor="phone" className={`block text-sm font-medium ${secondaryTextLight} ${secondaryTextDark} mb-1`}>Phone Number (Optional)</label>
